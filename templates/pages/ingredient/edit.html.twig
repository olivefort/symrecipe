{% extends 'base.html.twig' %}

{% block title %}SymRecipe - Modifier un ingrédient{% endblock %}

{% block body %}
    <div class="container mt-4">

        {# <a href="{{ path('ingredient.index') }}" class="btn btn-primary">Liste des ingrédients</a> #}

        <h1 class="mt-4">Modification d'un ingrédient</h1>

        {{ form_start(form) }}
        
        <div class="form-group">
            {{ form_label(form.name) }}      
            {{ form_widget(form.name) }}
            <div class="form-error">{{ form_errors(form.name) }}</div>
        </div>

        <div class="form-group">
            {{ form_label(form.price) }}      
            {{ form_widget(form.price) }}
            <div class="form-error">{{ form_errors(form.price) }}</div>
        </div>

        <div class="form-group">
            {{ form_row(form.submit, { 'label': 'Modifier l\'ingrédient'}) }}  
        </div>

        {{ form_end(form) }}
        
       
    </div>


{% endblock %}